<div id="add" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-body">
        <h3><%= @protocol.name %></h3>
        
        <%= form_tag protocol_add_path(params[:id]), :method => 'post', :enforce_utf8 => false do %>
          <div class="form-group">            
            <%= text_field_tag :amount, params[:amount], :placeholder => 'Enter number of protocols' , class: 'form-control' %>
					</div>
					<div class="input-group">
						<div class="input-group-btn">
							<button type="submit" class="btn btn-success add_protocols">Add Protocols</button>
							<button type="button" class="btn btn-default cancel" data-dismiss="modal">Cancel</button>
						</div>
          </div>
        <% end %>
				
      </div>
    </div>

  </div>
</div>