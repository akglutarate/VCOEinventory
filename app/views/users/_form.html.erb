<div class='col-md-12'>
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :username %>
      </div>
      <div class="col-sm-6">
        <% if @user.errors[:username].any? %>
          <ul class="error">
            <% @user.errors[:username].each do |error| %>
              <li>*Username <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.text_field :username, class: 'form-control', placeholder: 'Enter a username' %>
      </div>
    </div>
      
      
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :email %>
      </div>
      <div class="col-sm-6">
        <% if @user.errors[:email].any? %>
          <ul class="error">
            <% @user.errors[:email].each do |error| %>
              <li>*Email <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter a valid email" %>
      </div>
    </div>
      

    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :password %>
      </div>
      <div class="col-sm-6">
        <% if @user.errors[:password].any? %>
          <ul class="error">
            <% @user.errors[:password].each do |error| %>
              <li>*Password <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
      </div>
    </div>
      
      
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= f.submit(f.object.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success btn-lg item_submit') %>
      </div>
    </div>  
  <% end %>
</div>