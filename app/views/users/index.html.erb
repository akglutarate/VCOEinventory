
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <% @users.each do |user| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <h2><%= link_to user.username, user_path(user) %></h2>
            <hr class="clear" />
            <p><%= user.email %></p>
            <p class="meta"><%= user.items.count %> items</p>
          </div>
        </div>
      <% end %>
      <%= will_paginate @users %>
    </div>
  </div>
</div>