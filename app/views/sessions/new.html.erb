<div class="container-fluid">
  <div class='row'>
    <div align="center">
      <h1>Log In</h1>
    </div>
    
    <div class='col-md-12'>
      <%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          
        <div class="form-group">
          <div class="control-label col-sm-3">
            <%= f.label :email %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
          </div>
        </div>
          
    
        <div class="form-group">
          <div class="control-label col-sm-3">
            <%= f.label :password %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>
        </div>
          
          
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-6">
            <%= f.submit 'Log In', class: 'btn btn-success btn-lg item_submit' %>
          </div>
        </div>  
      <% end %>
    </div>
    
  </div>
</div>