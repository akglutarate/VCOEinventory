<div class='col-lg-12'>
  <%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      
    <div class="form-group">
      <div class="control-label col-sm-4">
        <%= f.label :email %>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>
    </div>
      

    <div class="form-group">
      <div class="control-label col-sm-4">
        <%= f.label :password %>
      </div>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
    </div>
      
		<div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
				<%= link_to 'Forgot Password?', new_password_reset_path, class: 'forgot_password' %>
      </div>
    </div>  
      
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit 'Log In', class: 'btn btn-success btn-lg item_submit' %>
      </div>
    </div>  
  <% end %>
</div>