<div class='col-md-12'>
  <%= form_for(@item, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :title %>
      </div>
      <div class="col-sm-6">
        <% if @item.errors[:title].any? %>
          <ul class="error">
            <% @item.errors[:title].each do |error| %>
              <li>*Title <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter an item name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :owner_location %>
      </div>
      <div class="col-sm-6">
        <% if @item.errors[:owner_location].any? %>
          <ul class="error">
            <% @item.errors[:owner_location].each do |error| %>
              <li>*Location <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.text_field :owner_location, class: "form-control", placeholder: "Enter a home location" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= f.submit class: 'btn btn-success btn-lg item_submit' %>
      </div>
    </div>  
  <% end %>
</div>