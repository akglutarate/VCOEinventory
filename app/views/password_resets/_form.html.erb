<div class='col-md-12'>
	<%= form_for(@user, :url => password_reset_path(params[:id]), :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-4">
        <%= f.label :password %>
      </div>
      <div class="col-sm-4">
        <% if @user.errors[:password].any? %>
          <ul class="error">
            <% @user.errors[:password].each do |error| %>
              <li>*Password <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
      </div>
    </div>
	
		<div class="form-group">
      <div class="control-label col-sm-4">
				<%= f.label :password_confirmation, 'Confirm Password' %>
      </div>
      <div class="col-sm-4">
        <% if @user.errors[:password_confirmation].any? %>
          <ul class="error">
            <% @user.errors[:password_confirmation].each do |error| %>
              <li>*Password <%= error %></li>
            <% end %>
          </ul>
        <% end %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
      </div>
    </div>
	
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
				<%= f.submit 'Update Password', class: 'btn btn-success btn-lg item_submit' %>
      </div>
    </div>  
  <% end %>
</div>