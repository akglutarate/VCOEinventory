<div class="container-fluid">
  <div class="row">
    <div class='col-md-12'>
			<div align="center">
				<h1>Item Ownership Change</h1>
			</div>
			<p class="col-sm-offset-3 col-sm-6">Change the ownership of a school's total items by user.</p><br />
			
			<%= form_tag assessment_ownership_path, :method => 'post', :enforce_utf8 => false, :class => 'form-horizontal' do %>
				<div class="form-group">  
					<div class="col-sm-3 col-sm-offset-3">
						<p class="ownership_tag">Select a school:</p>
						<%= select_tag(:ownership_school, options_from_collection_for_select(@schools, "name", "name"), :class => 'form-control') %>
					</div>
					<div class="col-sm-3">
						<p class="ownership_tag">Select a user:</p>
						<%= select_tag(:ownership_user, options_from_collection_for_select(@users, "id", "username"), :class => 'form-control') %>
					</div>          
				</div>
				<div class="form-group">
					<div class="col-sm-6 col-sm-offset-3">
						<button type="submit" class="btn btn-success btn-lg item_submit ownership_btn">Change Ownership</button>
					</div>
				</div>
			<% end %>
			
    </div>
  </div>
</div>
