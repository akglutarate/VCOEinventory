<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      
      <% @schools.each do |school| %>
        <div class="panel panel-default show_all">
          <div class="panel-body">
            <div class="left show_all_title"><%= school.name %></div>
            <div class="dropdown pull-right">
              <button class="dropdown-toggle edit_item_dropdown" type="button" data-toggle="dropdown">
                Edit <span class="glyphicon glyphicon-cog"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit #{school.name}", edit_school_path(school) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Delete #{school.name}", school_path(school), method: :delete, data: { confirm: "Are you sure you want to delete #{school.name}?" } %></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div align="center">
        <!-- pagination -->
      </div>
    </div>
  </div>
</div>